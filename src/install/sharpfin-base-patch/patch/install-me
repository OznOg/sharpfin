(echo 1 > /dev/misc/S3C2410\ watchdog) >> /mnt/debug/patch.log 2>&1
./lcdprint "Patching" "Starting" >> /mnt/debug/patch.log 2>&1

echo "----------------------------------------------------------" >> /mnt/debug/patch.log
echo "This logfile was generated by the radio patchserver process" >> /mnt/debug/patch.log
date >> /mnt/debug/patch.log
echo "It is OK to delete this logfile, it is for info only" >> /mnt/debug/patch.log 

echo 1 > /dev/misc/S3C2410\ watchdog
./lcdprint "Patching" "Sharpfin Base"
ipkg remove sharpfin-base >> /mnt/debug/patch.log
ipkg -force-reinstall install sharpfin-base_*_arm.ipk >> /mnt/debug/patch.log 2>&1

echo 1 > /dev/misc/S3C2410\ watchdog
./lcdprint "Patching" "Telnet Server"
ipkg remove sharpfin-telnetd >> /mnt/debug/patch.log
ipkg -force-reinstall install sharpfin-telnetd_*_arm.ipk >> /mnt/debug/patch.log 2>&1

echo 1 > /dev/misc/S3C2410\ watchdog
./lcdprint "Patching" "Web Server"
ipkg remove sharpfin-www >> /mnt/debug/patch.log
ipkg -force-reinstall install sharpfin-httpd_*_*arm.ipk >> /mnt/debug/patch.log 2>&1

echo 1 > /dev/misc/S3C2410\ watcdog
./lcdprint "Patching" "FTP Server"
ipkg remove sharpfin-ftpd >> /mnt/debug/patch.log
ipkg -force-reinstall install sharpfin-ftpd_*_*arm.ipk >> /mnt/debug/patch.log 2>&1

echo 1 > /dev/misc/S3C2410\ watchdog
./lcdprint "Patching" "Web Files"
ipkg -force-reinstall install sharpfin-www_*_arm.ipk >> /mnt/debug/patch.log 2>&1

echo 1 > /dev/misc/S3C2410\ watchdog
sync
sleep 2
mount / -oro,remount >> /mnt/debug/patch.log 2>&1

./lcdprint "Patching Done" "rebooting" >> /mnt/debug/patch.log 2>&1
echo "Upgrade Complete" >> /mnt/debug/patch.log 2>&1
